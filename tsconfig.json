{
  
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "lib": ["es2017", "dom"],
      "declaration": false,
      "noImplicitAny": true,
      "strict": true,
      "removeComments": true,
      "inlineSourceMap": false,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
    "include": ["./ts/**/*.ts"]
}
  